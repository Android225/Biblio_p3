<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/back_color"
    android:layout_height="match_parent">

    <View
        android:id="@+id/viewlistr"
        style="@style/line"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="@+id/hospit_img2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hospit_img2"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/hospit_img2"
        android:layout_width="237dp"
        android:layout_height="218dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067"
        app:srcCompat="@drawable/ultra" />

    <Button
        android:id="@+id/btnPeopleCabinet"
        style="@style/button_style_one"
        android:layout_width="142dp"
        android:layout_height="132dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="48dp"
        android:text="Личный Кабинет"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewlistr" />

    <Button
        android:id="@+id/btnPeopleRead"
        style="@style/button_style_one"
        android:layout_width="142dp"
        android:layout_height="132dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:text="Читальня"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewlistr" />

    <Button
        android:id="@+id/btnPeopleListRead"
        style="@style/button_style_one"
        android:layout_width="142dp"
        android:layout_height="132dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="140dp"
        android:text="Список прочитанного"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnBackToLogIn"
        style="@style/button_style_one"
        android:layout_width="142dp"
        android:layout_height="132dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="140dp"
        android:text="Назад"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>